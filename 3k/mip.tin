		#REGEX {Emit> : <%w%d>}			{#VAR {my[emit][level]}		{&2}};
		#REGEX {Equipollent}			{#VAR {my[equip]}		{on}}
							{#VAR {my[equip]}		{off}};
		#REGEX {Form>: <c%w>\(<r%d>\)}		{
			#VAR {my[form][type]}		{&1};
			#VAR {my[form][size]}		{&2}
		};
		#REGEX {Rating>: <r%d>}			{#VAR {my[rating]}		{&1}}
